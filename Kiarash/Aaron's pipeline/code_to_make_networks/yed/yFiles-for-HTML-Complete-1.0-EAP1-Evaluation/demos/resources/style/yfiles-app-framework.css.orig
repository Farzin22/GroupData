html, body, .y-app {
    position: relative;
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
}

.y-app {
    font-size: 12px;
}

.y-app header, .y-toolbar, .y-app footer {
    width: 100%;
    height: 30px;
}

.y-toolbar {
    height: 30px;
}

.y-app footer {
    height: 25px;
}

#description, #sidebar {
    width: 25%;
}

#graphControl {
    width: 50%;
}

#description {
    position: absolute;
    left: 0;
}

#graphControl {
    position: absolute;
    left: 25%;
    right: 25%;
}

#sidebar {
    position: absolute;
    right: 0;
}

#description, #graphControl, #sidebar {
    /* use old IE box model so that border is included in width */
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    top: 62px; /* branding + toolbar */
    bottom: 25px; /* footer */
    border-top: none;
    border-bottom: none;
    margin: 0;
}

#description h1 {
    font-size: 1.1em;
}

#description h2 {
    font-size: 0.9em;
}

.y-app header {
    background-image: linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 30%);
    background-image: -o-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 30%);
    background-image: -moz-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 30%);
    background-image: -webkit-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 30%);
    background-image: -ms-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 30%);

    background-image: -webkit-gradient(
        linear,
        left bottom,
        left top,
        color-stop(0, #E2E2E2),
        color-stop(0.3, #FEFEFE)
    );
}

.y-app header a {
    text-decoration: none;
    display: inline-block;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    width: 50%;
    line-height: 30px;
    font-size: 1.3em;
    padding: 0 10px;
}

.y-app header .yworks {
    text-align: right;
}

.y-app footer {
    position: absolute;
    bottom: 0;
	text-align: center;
    border-top: 1px solid #7D7D7D;
    background-image: linear-gradient(top, #E2E2E2 0%, #FEFEFE 22%);
    background-image: -o-linear-gradient(top, #E2E2E2 0%, #FEFEFE 22%);
    background-image: -moz-linear-gradient(top, #E2E2E2 0%, #FEFEFE 22%);
    background-image: -webkit-linear-gradient(top, #E2E2E2 0%, #FEFEFE 22%);
    background-image: -ms-linear-gradient(top, #E2E2E2 0%, #FEFEFE 22%);

    background-image: -webkit-gradient(
        linear,
        left top,
        left bottom,
        color-stop(0, #E2E2E2),
        color-stop(0.22, #FEFEFE)
    );

    line-height: 24px;
}

.y-toolbar {
    background-image: linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 85%);
    background-image: -o-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 85%);
    background-image: -moz-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 85%);
    background-image: -webkit-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 85%);
    background-image: -ms-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 85%);

    background-image: -webkit-gradient(
        linear,
        left bottom,
        left top,
        color-stop(0, #E2E2E2),
        color-stop(0.85, #FEFEFE)
    );

    border: 1px solid #BEBEBE;
    line-height: 27px;
}

.y-toolbar .y-separator {
    display: inline-block;
    width: 1px;
    background: gray;
}

.y-collapsible-pane {
    border: 1px solid #7D7D7D;
    margin-bottom: 5px;
}

.y-collapsible-pane-header {
    font-size: 1.2em;
    display: block;

    background-image: linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 85%);
    background-image: -o-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 85%);
    background-image: -moz-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 85%);
    background-image: -webkit-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 85%);
    background-image: -ms-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 85%);

    background-image: -webkit-gradient(
        linear,
        left bottom,
        left top,
        color-stop(0, #E2E2E2),
        color-stop(0.85, #FEFEFE)
    );

    color: #7D7D7D;
    line-height: 1.5em;
    padding: 3px;
    letter-spacing: 1px;
    border-bottom: 1px solid #BEBEBE;
    cursor: pointer;
    user-select: none;
}

.y-collapsible-pane-content {
    padding: 5px;
}

.y-collapsed .y-collapsible-pane-content {
    display: none;
}

.y-collapsed .y-collapsible-pane-header {
    border-bottom: none;
}

.y-button {
    border: 1px solid #7D7D7D;
    background-image: linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 85%);
    background-image: -o-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 85%);
    background-image: -moz-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 85%);
    background-image: -webkit-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 85%);
    background-image: -ms-linear-gradient(bottom, #E2E2E2 0%, #FEFEFE 85%);

    background-image: -webkit-gradient(
        linear,
        left bottom,
        left top,
        color-stop(0, #E2E2E2),
        color-stop(0.85, #FEFEFE)
    );
    padding: 2px 10px;
    -webkit-border-radius: 6px;
    -moz-border-radius: 6px;
    border-radius: 6px;
    -webkit-box-shadow: rgba(255,255,255,0.4) 0 1px 0, inset rgba(255,255,255,0.4) 0 1px 0;
    -moz-box-shadow: rgba(255,255,255,0.4) 0 1px 0, inset rgba(255,255,255,0.4) 0 1px 0;
    box-shadow: rgba(255,255,255,0.4) 0 1px 0, inset rgba(255,255,255,0.4) 0 1px 0;
    color: #7D7D7D;
    font-family: helvetica, serif;
    text-decoration: none;
    vertical-align: middle;
}